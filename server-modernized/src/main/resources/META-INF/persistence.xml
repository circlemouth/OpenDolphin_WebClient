<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    <persistence-unit name="opendolphinPU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/PostgresDS</jta-data-source>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <validation-mode>CALLBACK</validation-mode>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <!-- RUN_ID=20251121TrialPHRSeqZ1-CTX: ensure PHRKey/PHRAsyncJob stay registered for Modernized export -->
        <class>open.dolphin.infomodel.UserModel</class>
        <class>open.dolphin.infomodel.FacilityModel</class>
        <class>open.dolphin.infomodel.RoleModel</class>
        <class>open.dolphin.infomodel.PatientModel</class>
        <class>open.dolphin.infomodel.HealthInsuranceModel</class>
        <class>open.dolphin.infomodel.KarteBean</class>
        <class>open.dolphin.infomodel.RegisteredDiagnosisModel</class>
        <class>open.dolphin.infomodel.PatientVisitModel</class>
        <class>open.dolphin.infomodel.AppointmentModel</class>
        <class>open.dolphin.infomodel.LetterModule</class>
        <class>open.dolphin.infomodel.LetterItem</class>
        <class>open.dolphin.infomodel.LetterText</class>
        <class>open.dolphin.infomodel.LetterDate</class>
        <class>open.dolphin.infomodel.NLaboModule</class>
        <class>open.dolphin.infomodel.NLaboItem</class>
        <class>open.dolphin.infomodel.StampTreeModel</class>
        <class>open.dolphin.infomodel.PublishedTreeModel</class>
        <class>open.dolphin.infomodel.SubscribedTreeModel</class>
        <class>open.dolphin.infomodel.DocumentModel</class>
        <class>open.dolphin.infomodel.ModuleModel</class>
        <class>open.dolphin.infomodel.SchemaModel</class>
        <class>open.dolphin.infomodel.ObservationModel</class>
        <class>open.dolphin.infomodel.PatientMemoModel</class>
        <class>open.dolphin.infomodel.AttachmentModel</class>
        <class>open.dolphin.infomodel.PHRKey</class>
        <class>open.dolphin.infomodel.PHRAsyncJob</class>
        <class>open.dolphin.infomodel.Factor2Device</class>
        <class>open.dolphin.infomodel.Factor2Code</class>
        <class>open.dolphin.infomodel.Factor2Credential</class>
        <class>open.dolphin.infomodel.Factor2Challenge</class>
        <class>open.dolphin.infomodel.Factor2BackupKey</class>
        <class>open.dolphin.infomodel.AuditEvent</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.jdbc.use_streams_for_lob" value="false"/>
            <property name="hibernate.jdbc.lob.non_contextual_creation" value="true"/>
            <property name="hibernate.enable_lazy_load_no_trans" value="false"/>
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
            <property name="hibernate.query.fail_on_pagination_over_collection_fetch" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.archive.autodetection" value="class,hbm"/>
            <property name="hibernate.query.jpaql_strict_compliance" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
