<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  <property name="charset" value="UTF-8"/>
  <property name="severity" value="warning"/>

  <!-- 既存コードとの乖離を避けるため、軽量ルールのみを適用 -->
  <module name="TreeWalker">
    <module name="UnusedImports"/>
    <module name="AvoidStarImport"/>
    <module name="EmptyCatchBlock">
      <property name="exceptionVariableName" value="ignored|expected"/>
    </module>
    <module name="ModifierOrder"/>
    <module name="WhitespaceAround">
      <property name="tokens" value="ASSIGN, BAND, BOR, BXOR, COLON, DIV, EQUAL, GE, GT, LAND, LE, LITERAL_ASSERT, LITERAL_CATCH, LITERAL_DO, LITERAL_ELSE, LITERAL_FINALLY, LITERAL_FOR, LITERAL_IF, LITERAL_RETURN, LITERAL_SYNCHRONIZED, LITERAL_TRY, LITERAL_WHILE, LT, MINUS, MOD, NOT_EQUAL, PLUS, QUESTION, SL, SR, STAR"/>
    </module>
    <module name="Indentation">
      <property name="basicOffset" value="4"/>
      <property name="braceAdjustment" value="0"/>
      <property name="tabWidth" value="4"/>
      <property name="lineWrappingIndentation" value="4"/>
    </module>
  </module>
</module>
