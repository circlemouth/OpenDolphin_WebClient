{
  "title": "Biz KPI (Prod) – PII sanitized",
  "uid": "obs-biz-kpi",
  "schemaVersion": 38,
  "timezone": "browser",
  "panels": [
    {
      "id": 11,
      "type": "stat",
      "title": "受付件数 (15m sum)",
      "datasource": "Prometheus-prod",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by(env, facility)(increase(biz_kpi_reception_total[15m]))",
          "legendFormat": "{{env}} / {{facility}}"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "pod": true,
              "instance": true,
              "job": true
            }
          }
        }
      ],
      "description": "Aggregated reception totals; only env/facility retained to drop PII."
    },
    {
      "id": 12,
      "type": "stat",
      "title": "請求件数 (15m sum)",
      "datasource": "Prometheus-prod",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by(env, facility)(increase(biz_kpi_billing_total[15m]))",
          "legendFormat": "{{env}} / {{facility}}"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "pod": true,
              "instance": true,
              "job": true
            }
          }
        }
      ],
      "description": "Billing totals aggregated; patient-specific labels not present."
    }
  ]
}
