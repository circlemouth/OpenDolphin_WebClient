# Stage 向け環境変数テンプレート
# MSW は無効化し、実 API へ接続する前提。
VITE_DISABLE_MSW=1

# Stage の API ベース URL（同一オリジン前提。/api を既定）
VITE_API_BASE_URL=/api

# 監査ログの送信先を分離する場合は指定（未使用ならコメントアウト）
# VITE_AUDIT_ENDPOINT=https://stage.example.com/audit

# HTTP タイムアウト（ミリ秒）
VITE_HTTP_TIMEOUT_MS=10000

# ネットワークエラー時の最大リトライ回数
VITE_HTTP_MAX_RETRIES=2

# Vite dev/preview のプロキシ接続先（ローカル検証時のみ使用。/api をこのオリジンへ中継）
VITE_DEV_PROXY_TARGET=https://stage.example.com
# HTTPS を無効化する場合のみ 0 を指定
VITE_DEV_USE_HTTPS=1

# ORCA マスター取得経路（現行の bridge 実装は base URL を参照）
WEB_ORCA_MASTER_SOURCE=server
VITE_ORCA_MASTER_BRIDGE=/api
VITE_ORCA_MASTER_BRIDGE_RUN_ID=20251124T073245Z
VITE_ORCA_MASTER_SNAPSHOT_VERSION=20251124T000000Z

# 観測系（任意）
# VITE_RUM_RUN_ID=20251228T000000Z
# VITE_PERF_LOG_ENDPOINT=https://stage.example.com/__perf-log
# Legacy header auth: デフォルト無効。Stage で旧ヘッダが必要なら 1。
VITE_ENABLE_LEGACY_HEADER_AUTH=0
# 旧ヘッダが無効でも、失敗時に一度だけフォールバックする場合は 1。
VITE_ALLOW_LEGACY_HEADER_AUTH_FALLBACK=0
# X-Facility-Id を明示送信するか（特殊環境のみ 1）。
VITE_ENABLE_FACILITY_HEADER=0
# デモ系 UI を表示するか。Stage では原則 0。
VITE_ENABLE_DEMO_ENDPOINTS=0
# stub エンドポイントを表示/使用するか。Stage では原則 0。
VITE_ENABLE_STUB_ENDPOINTS=0
